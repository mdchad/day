<div class="row">
  <div class="six columns offset-by-three space-top">
    <%= form_for(donation) do |f| %>
      <% if donation.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

          <ul>
          <% donation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :amount %>
        <%= f.number_field :amount, placeholder: "Pledge amount", class: "u-full-width" %>
      </div>

      <%= f.hidden_field :campaign_id, :value=> id %>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

    <%= link_to 'Back', campaigns_path %>
  </div>
</div>
